<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recyclerview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecyclerView">
        <activity android:name=".oep.DiscussionImageDetailActivity"></activity>
        <activity android:name=".oep.DiscussionActivity" />
        <activity android:name=".oep.SetActivity" />
        <activity android:name=".baserecyclerview.DetailsItemActivity" />
        <activity android:name=".recyclerview.kotlin.NewsActivity" />
        <activity android:name=".recyclerview.kotlin.DetailsActivity" />
        <activity android:name=".main.kotlin.MainActivityKotlin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".recyclerview.kotlin.ItemActivity" />
        <activity android:name=".main.java.MainActivity" />
    </application>

</manifest>